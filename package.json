{
    "name": "preact-ts-widget",
    "version": "0.1.0",
    "description": "",
    "source": "src/index.ts",
    "main": "dist/index.js",
    "module": "dist/index.module.js",
    "umd:main": "dist/index.umd.js",
    "scripts": {
        "dev": "preact watch --template src/template.html",
        "build:widget": "microbundle build --css inline --external none",
        "build:lib": "microbundle build -i src/components/Widget/index.tsx",
        "build:bundle": "microbundle build -o dist/bundle.js --no-pkg-main -f umd --external none --css inline --no-compress",
        "lint": "eslint '{src,test}/**/*.{ts,tsx}'",
        "test": "jest"
    },
    "files": [
        "dist"
    ],
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "extends": [
            "preact",
            "plugin:@typescript-eslint/recommended"
        ],
        "ignorePatterns": [
            "build/"
        ]
    },
    "devDependencies": {
        "@types/enzyme": "^3.10.8",
        "@types/jest": "^26.0.15",
        "@typescript-eslint/eslint-plugin": "^4.6.1",
        "@typescript-eslint/parser": "^4.6.1",
        "classnames": "^2.2.6",
        "enzyme": "^3.11.0",
        "enzyme-adapter-preact-pure": "^2.2.3",
        "eslint": "^7.13.0",
        "eslint-config-preact": "^1.1.3",
        "jest": "^26.6.3",
        "jest-preset-preact": "^4.0.2",
        "microbundle": "^0.13.0",
        "node-sass": "^4.5.3",
        "preact": "10.5.7",
        "preact-cli": "3.0.5",
        "preact-habitat": "^3.3.0",
        "preact-render-to-string": "^5.1.11",
        "sass-loader": "^6.0.6",
        "typescript": "^4.1.3"
    },
    "jest": {
        "preset": "jest-preset-preact",
        "setupFiles": [
            "<rootDir>/tests/__mocks__/setupTests.js"
        ]
    }
}
